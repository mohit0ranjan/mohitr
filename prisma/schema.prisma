generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  publishedAt DateTime?
  isPublished Boolean   @default(false)
  tags        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String
  techStack   String
  liveUrl     String?
  githubUrl   String?
  imageUrl    String?
  category    String   @default("Personal")
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  detail      String?
}

model Opportunity {
  id               String    @id @default(uuid())
  title            String
  slug             String    @unique
  company          String
  location         String?
  type             String
  shortDescription String
  fullDescription  String
  applyLink        String?
  duration         String?
  stipend          String?
  startDate        DateTime?
  endDate          DateTime?
  status           String    @default("Active")
  isPublished      Boolean   @default(false)
  isFeatured       Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  imageUrl         String?
}

model DevTool {
  id               String   @id @default(uuid())
  name             String
  slug             String   @unique
  category         String
  icon             String?
  shortDescription String?
  longDescription  String?
  liveUrl          String?
  isFeatured       Boolean  @default(false)
  isPublished      Boolean  @default(true)
  updatedAt        DateTime @updatedAt
  githubUrl        String?
  toolType         String?
}

model TechTool {
  id          String   @id @default(uuid())
  name        String
  category    String
  icon        String?
  proficiency Int?
  isVisible   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimelineEntry {
  id          String   @id @default(uuid())
  year        String
  title       String
  type        String
  description String
  order       Int      @default(0)
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  company     String?
  location    String?
  url         String?
}

model FocusPoint {
  id          String   @id @default(uuid())
  title       String
  description String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Capability {
  id          String   @id @default(uuid())
  title       String
  description String
  icon        String
  isVisible   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TickerUpdate {
  id        String   @id @default(uuid())
  content   String
  type      String
  url       String?
  icon      String?
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryItem {
  id          String   @id @default(uuid())
  title       String
  description String?
  imageUrl    String
  date        DateTime @default(now())
  isVisible   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String   @default("ADMIN")
}

model PageContent {
  id        String   @id @default(uuid())
  section   String   @unique
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hackathon {
  id                   String    @id @default(uuid())
  name                 String
  slug                 String    @unique
  organizer            String
  website              String?
  location             String?
  mode                 String    @default("Online")
  startDate            DateTime
  endDate              DateTime
  registrationDeadline DateTime?
  description          String?
  tags                 String?
  status               String    @default("Upcoming")
  isFeatured           Boolean   @default(false)
  imageUrl             String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model RecruiterDataset {
  id          String   @id @default(uuid())
  title       String
  description String?
  companies   String
  role        String
  location    String
  emailCount  Int
  fileFormat  String
  price       String
  topmateLink String?
  isVerified  Boolean  @default(true)
  lastUpdated DateTime @default(now())
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  imageUrl    String?
}

model ColdEmailTemplate {
  id          String   @id @default(uuid())
  title       String
  subject     String
  body        String
  category    String
  tips        String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OutreachTool {
  id          String   @id @default(uuid())
  name        String
  description String
  link        String
  pricing     String
  category    String
  icon        String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
